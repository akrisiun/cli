<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" />

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp1.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <MicrosoftNETSdkPackageVersion2>3.0.100-preview.18551.1</MicrosoftNETSdkPackageVersion2>
    <MicrosoftNETSdkRazorPackageVersion>3.0.100-preview.18551.1</MicrosoftNETSdkRazorPackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Build.Extensions" Version="$(MicrosoftNETSdkPackageVersion2)" />
    <PackageReference Condition="'$(DependencyPackageName)' != 'Microsoft.NET.Build.Extensions'" 
                      Include="$(DependencyPackageName)" Version="$(DependencyPackageVersion)" />
    <PackageReference Condition="'$(DependencyPackageName)' == 'Microsoft.NET.Sdk.Web'" Include="Microsoft.NET.Sdk" Version="$(MicrosoftNETSdkPackageVersion2)" />
    <PackageReference Condition="'$(DependencyPackageName)' == 'Microsoft.NET.Sdk.Web'" Include="Microsoft.NET.Sdk.Razor" Version="$(MicrosoftNETSdkRazorPackageVersion)" />
  </ItemGroup>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
